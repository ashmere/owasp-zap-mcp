{
  "name": "OWASP ZAP MCP Development",

  // Use the main docker-compose.yml with devcontainer profile
  "dockerComposeFile": "../docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "shutdownAction": "none",

  // Only start ZAP by default (MCP server runs locally for development)
  "runServices": ["zap"],

  // Port forwarding
  "forwardPorts": [3000, 8080, 8090],
  "portsAttributes": {
    "3000": {
      "label": "MCP Server (Local)",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "ZAP API",
      "onAutoForward": "notify"
    },
    "8090": {
      "label": "ZAP Web UI",
      "onAutoForward": "ignore"
    }
  },

  // Setup commands
  "postCreateCommand": "cd owasp_zap_mcp && pip install -e . && echo 'âœ… Development environment ready! Run: cd owasp_zap_mcp && python -m owasp_zap_mcp.main --sse'",
  "initializeCommand": "docker compose --profile devcontainer up -d zap",

  // VS Code settings
  "customizations": {
    "vscode": {
      "settings": {
        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/.git/**": true,
          "**/reports/**": true,
          "**/__pycache__/**": true
        },
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "ms-vscode.vscode-json"
      ]
    }
  }
}
