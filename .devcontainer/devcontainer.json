{
  "name": "OWASP ZAP MCP DevContainer",
  
  // Use docker-compose for better integration
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  
  // User configuration for proper permissions
  "remoteUser": "codespace",
  "updateRemoteUserUID": true,
  
  // Port forwarding for MCP server and ZAP
  "forwardPorts": [3000, 8080, 8090],
  "portsAttributes": {
    "3000": {
      "label": "MCP Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "ZAP API", 
      "onAutoForward": "notify"
    },
    "8090": {
      "label": "ZAP Web UI",
      "onAutoForward": "ignore"
    }
  },
  
  // Post-create setup
  "postCreateCommand": "sudo chown -R codespace:codespace /workspace && docker --version && ls -la /workspace",
  
  // Lifecycle scripts
  "initializeCommand": "docker --version",
  //"postStartCommand": "docker compose -f docker-compose.yml up -d zap owasp-zap-mcp",
  
  // VS Code settings
  "customizations": {
    "vscode": {
      "settings": {
        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/.git/**": true,
          "**/reports/**": true,
          "**/__pycache__/**": true
        },
        "python.defaultInterpreterPath": "/usr/local/python/current/bin/python",
        "python.formatting.provider": "black"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.flake8", 
        "ms-python.black-formatter",
        "ms-vscode.vscode-json"
      ]
    }
  }
}
