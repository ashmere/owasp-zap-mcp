# OWASP ZAP MCP Server Configuration
# Copy this file to .env and modify as needed

# Logging Configuration
LOG_LEVEL=INFO

# ZAP Configuration
# For local development (host-based): use http://localhost:8080
# For Docker container communication: use http://zap:8080
ZAP_BASE_URL=http://localhost:8080
ZAP_API_KEY=

# MCP Server Configuration (SSE Mode)
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# CORS Configuration (SSE Mode)
ALLOWED_ORIGINS=*
MCP_ALLOW_CREDENTIALS=false
